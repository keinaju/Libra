extends layout

block content

  h1 #{title}: #{book.name}

  if book_copies.length

    p #[strong Delete the following book instances before attempting to delete this book record.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Book copies:
      dl
        each copy in book_copies
          dt
            a(href=copy.url) #{copy._id}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
